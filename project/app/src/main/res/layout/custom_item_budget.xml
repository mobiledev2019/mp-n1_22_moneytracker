<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="12dp"
            android:src="@drawable/ic_category_all" />

        <TextView
            android:id="@+id/title_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/expense_category_title"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_category"
            android:layout_marginLeft="56dp"
            android:text="01/2019-12/2019"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Express"
            android:layout_marginLeft="56dp"/>
        <TextView
            android:id="@+id/title_money_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_below="@+id/title_express"
            android:text="100000đ"/>
        <TextView
            android:id="@+id/title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remain"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp" />
        <TextView
            android:id="@+id/title_money_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_status"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="100000đ"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>