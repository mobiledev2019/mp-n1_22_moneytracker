<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_doubleline_height"
    android:minHeight="@dimen/listitem_doubleline_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtBigTitle"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/spacing_72_horizontal"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_toLeftOf="@+id/imgChecked" />

    <TextView
        android:id="@+id/txtSmallTitle"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBigTitle"
        android:layout_alignLeft="@+id/txtBigTitle"
        android:layout_alignRight="@+id/txtBigTitle" />

    <ImageView
        android:id="@+id/imgChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/spacing_medium"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"
        android:src="@drawable/ic_check_green" />
</RelativeLayout>
