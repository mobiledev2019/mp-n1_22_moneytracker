<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/colorTextSecondaryDark</item>
        <item name="android:colorForeground">@color/colorBackgroundItem</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/colorTextSecondaryDark</item>
        <item name="android:colorForeground">@color/colorBackgroundItem</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Seperator">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
</resources>
